package testTSPGA;

import java.awt.Point;
import java.util.Vector;

import javax.swing.SwingWorker;

import org.jgap.IChromosome;

public class TSP_GA_Worker extends SwingWorker{
	private Vector<Vector<Point>> resultsData;
	private TSP_GA_Adapter work;
	private IChromosome bestPath;
	
	public TSP_GA_Worker(Vector<Vector<Point>> resData, IChromosome bPath){
		resultsData=resData;
		bestPath=bPath;
	}

	@Override
	protected Object doInBackground() throws Exception {
		work=new TSP_GA_Adapter(this, resultsData, bestPath);
		try {
			work.doInBackground();
		} catch (Exception e) {
			e.printStackTrace();
		}
		this.done();
		this.setProgress(100);
		return null;
	}
	
	public void updateProgress(int v){
		//System.out.println("Updated");
		this.setProgress(v);
		//System.out.print(resultsData.size());
	}

}
